<% @goals.each do |goal| %>
	<div class="card">
		<div class="card-block">
			<h2><%= goal.title %></h2>
			<p><%= goal.description %></p>
			<p>I want to accomplish this goal by: <%= goal.end_date %></p>
			<%= button_to "Show Goal", goal_path(goal.id), :class => "btn btn-success", :method => :get %>
			<% if goal.completed_at.nil? == true %>
				<p>Goal Accomplished</p>
			<% end %>
		</div>
	</div>
<% end %>