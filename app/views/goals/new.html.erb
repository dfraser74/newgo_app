<div class="container">
	<h1 class="new-title">CREATE A NEW GOAL</h1>
			<div class="row">
				<div class="col-md-4 offset-md-4">
					<%= form_for @goal do |f| %>
					<div class="form-group">
						<%= f.label :title , "my goal is to:" %>
						<%= f.text_field :title , :class => "form-title-input", :class => "form-control" %>
					</div>
					<div class="form-group">
						<%= f.label :description , :class => "form-desc" %>
						<%= f.text_area :description , :class => "form-control" %>
					</div>
						<div class="form-group">
							<%= f.label :end_date , "i want to accomplish this goal by:" , :class => "form-end" %>
							<%= f.date_field :end_date , :class => "form-control goal-date" %>
						</div>
						<%= f.submit "Submit Goal", :class => "btn btn-primary" %>
					<% end %>
				</div>
			</div>
</div>