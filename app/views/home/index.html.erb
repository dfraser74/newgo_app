<div class="container">
	<div class="goal-container">
		<div id="my-goal-box">
			<h1 id="my-goals"> My Goals</h1>
			<%= link_to "Create New Goal" , new_goal_path , :class => "create-goal" %>
		</div>
		<% @goals.each do |goal| %>
			<div class="goal-box">
				<h2><%= goal.title %></h2>
				<p><%= goal.description %></p>
				<%= link_to "Show Goal", goal_path(goal.id) %>
			</div>
		<% end %>
	</div>
</div>
