<!-- much like using an each loop, this partial goes through the @tasks variable where the parital is used
in the goals show.html.erb -->


	<div id="#t-<%= task.id %>"><%= task.title %></div>
	<%= task.description %>
	<%= task.completed_at %>
	<%= link_to "Edit Task" , edit_goal_task_path(@goal, task.id) %>
	<% if task.completed_at.nil? %>
		<%= link_to "Complete", complete_goal_task_path(@goal, task.id), action: :complete, remote: true, method: :patch , id: "task_#{task.id}"%>
	<% end %>